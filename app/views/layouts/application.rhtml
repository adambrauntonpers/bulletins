<html>
<head>
    <META NAME="Author" CONTENT="Adam Braunton, adam.braunton@gmail.com">
    <title>Pilton Community College Daily Pupil Bulletins</title>
    <%= stylesheet_link_tag 'scaffold' %>
	<style type="text/css">@import url(/stylesheets/calendar-blue.css);</style>
	<script type="text/javascript" src="/javascripts/calendar.js"></script>
	<script type="text/javascript" src="/javascripts/lang/calendar-en.js"></script>
	<script type="text/javascript" src="/javascripts/calendar-setup.js"></script>
</head>
<body>
	
    <table width="790" cellpadding="0" cellspacing="0" align="center" style="height:100%;width:790" border="0">
        <tr>
            <td style="background:url(/images/header.jpg); background-repeat:no-repeat" width="790" height="78" valign="center">
				<div class="floatingMainTitle">Pilton Community College</div>
				<div class="floatingTitle">Daily Pupil Bulletin</div>
            </td>
        </tr>
        <tr>   
            <td valign="top">
				<%= flash[:notice] %>
				<% if flash[:error] %>
					<div style="font-color:bold; font-weight:bold; font-size:14px">
					<%= flash[:error] %>
					</div>
				<% end%>
				
				
<table width="790" cellpadding="0" cellspacing="0">
	<tr>
		<td>
			<% if session[:teacher] != nil %>
				Logged in as '<%=session[:teacher]%>'
			<% end %>
		</td>
		<td align="right">
			<% if session[:teacher] != nil %>
			<% if session[:superuser] != nil %>
		      <%= link_to 'Manage admins', :action => 'list', :controller => 'adminusers' %>
		    <% end %>
			<%= link_to 'Add new item', :action => 'new', :controller => 'bulletins' %>
		    <%= link_to 'Logout', :action => 'logout', :controller => "login" %>
			
			<a href="#" onclick="popupRegisterPrintout()">Register printout</a>
			
			<% if params[:year] == "11" %>
				<a href="#" onclick="popupPrintout(11)">Print Year 11</a>
			<% elsif params[:year] == "10" %>
				<a href="#" onclick="popupPrintout(10)">Print Year 10</a>
			<% elsif params[:year] == "9" %>
				<a href="#" onclick="popupPrintout(9)">Print Year 9</a>
			<% elsif params[:year] == "8" %>
				<a href="#" onclick="popupPrintout(8)">Print Year 8</a>
			<% elsif params[:year] == "7" %>
				<a href="#" onclick="popupPrintout(7)">Print Year 7</a>
			<% else %>
				<a href="#" onclick="popupPrintout(0)">Print all</a>
			<% end %>
			
		    <% else %>
			<%= link_to 'Staff Login', :action => 'login', :controller => 'login' %>
			<% end %>
			
		</td>
	</tr>
</table>
				
				
                <%= yield  %>
            </td>
        </tr>
        <tr>
            <td style="background-image: url(/images/strip2.jpg)" height="23">
                <table width="100%" cellpadding="0" cellspacing="0" style="font-size:10px; color:#ffffff">
    				<tr>
    					<td align="left"></td>
    					<td align="right"></td>
    				</tr>
    			</table>
			</td>
        </tr>
    </table>
</body>
</html>
